{
    "log": {
      "level": "trace",
      "timestamp": true,
      "output": "<log_file>"
    },
    "inbounds": [
      {
        "type": "vmess",
        "tag": "vmess-in",
        "listen": "::",
        "listen_port": <port_vmess>,
        "users": [
          {
            "name": "ray",
            "uuid": "<proxy_uuid>"
          }
        ],
        "multiplex": {
          "enabled": true
        },
        "transport": {
          "type": "httpupgrade",
          "path": "/download",
          "headers": {
            "Host": "download.windowsupdate.com"
          }
        }
      },
      {
        "type": "vless",
        "tag": "reality-in",
        "listen": "::",
        "listen_port": <port_reality>,
        "users": [
          {
            "name": "ray",
            "uuid": "<proxy_uuid>",
            "flow": "xtls-rprx-vision"
          }
        ],
        "tls": {
          "enabled": true,
          "server_name": "<reality_server_name>",
          "reality": {
            "enabled": true,
            "handshake": {
              "server_port": 443,
              "server": "<reality_server_name>"
            },
            "private_key": "<reality_private_key>",
            "short_id": [
              "<reality_short_id>"
            ]
          }
        },
        "multiplex": {
          "enabled": true
        },
        "transport": {}
      }
    ]
  }
